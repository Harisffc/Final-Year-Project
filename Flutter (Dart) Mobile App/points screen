import 'package:flutter/material.dart';
import 'package:provider/provider.dart';
import 'points_provider.dart'; // Import PointsProvider

class PointsScreen extends StatelessWidget {
  final String userId = 'user123'; // Replace with actual user ID, potentially from Supabase Auth

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Color(0xFF0C7C72), // Set the same color as sign_in.dart
      appBar: AppBar(
        title: Text('Your Points'),
        backgroundColor: Colors.teal[700],
      ),
      body: Consumer<PointsProvider>(
        builder: (context, pointsProvider, child) {
          return Center(
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                // Display the GIF logo (eco logo)
                Image.asset(
                  'assets/images/eco_logo.gif', // Path to your GIF logo
                  height: 100, // Adjust the size of the GIF as needed
                  width: 100,
                ),
                SizedBox(height: 20),

                // Display total points
                Text(
                  'Total Points: ${pointsProvider.totalPoints}',
                  style: TextStyle(fontSize: 24, color: Colors.white), // White text color
                ),
                SizedBox(height: 20),
              ],
            ),
          );
        },
      ),
    );
  }
}


